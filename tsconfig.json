{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["es2015", "dom"],
    "importHelpers": true,
    "sourceMap": true,
    "noEmitOnError": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "strict": false,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "exclude": ["node_modules", "dist", "typings", "**/__test__", "test", "docs", "tests"]
}
